/* pages/user/user.wxss */
.box{
  height: 500rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  border-bottom-right-radius: 80rpx;
  border-bottom-left-radius: 80rpx;
  margin-bottom: 30rpx;
}
.userInfo{
  width:280rpx;
  height:280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:auto auto;
  transition: all 300ms ease;
  justify-content: flex-start;
  /*border:1rpx solid red;*/
}
.userInfo .avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-size: cover;
}
.userInfo .block-avatar{
  height:200rpx;
  width:200rpx;
  border-radius: 50%;
}
.userInfo .nickName{
  width:200rpx;
  height:50rpx;
  margin-top: 5rpx;
  font-size: medium;
}
.line{
  width:100%;
  height:2rpx;
  margin-top: 25rpx;
  border:1rpx solid darkgrey;
  background: darkgray;
  margin-bottom: 25rpx;
  clear: both;
}
.column-line{
  width:2rpx;
  height:140rpx;
  border:1rpx solid darkgrey;
  background: darkgray;
}
.day-calorie{
  width:100%;
  height:200rpx;
  display: flex;
  flex-direction: row; 
}
.day-calorie .text{
  color: #9c9898;
}
.day{
  width:50%;
  height:200rpx;
  /*border:1rpx solid red;*/
  border-bottom-left-radius: 80rpx;
  float: left;
}
.calorie{
  width:50%;
  height:200rpx;
 /* border:1rpx solid red;*/
  border-bottom-right-radius: 80rpx;
  float:left
}
.number{
  text-align: center;
  font-weight: 600;
}
.text{
  margin: 25rpx 25rpx;
  text-align: center;
}
.data{
  width:100%;
  height:200rpx;
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
}
.data image{
  width:50rpx;
  height:50rpx;
  margin-left:140rpx;
  float:left;
}
.data-item{
  width:500rpx;
  height:100rpx;
  background: #fff;
  margin: auto;
  margin-bottom: 80rpx;
  padding-top:35rpx;
  padding-bottom:35rpx;
  border-radius: 50rpx;
  box-shadow:0px 0px 10px #888;
}
.data-info{
  margin-left:10rpx;
  width:50rpx;
  height:50rpx;
  font-size: medium;
  margin:auto;
}
.switch{
  float:right;
  margin-right: 25rpx;
}